<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/shape_dialog_bg_radius"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_15"
            android:text="标题"
            android:textColor="@color/black_text"
            android:textSize="@dimen/size_sp_15"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dialog_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginLeft="@dimen/margin_35"
            android:layout_marginRight="@dimen/margin_35"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center_horizontal"
            android:minHeight="@dimen/margin_70"
            android:textColor="@color/black_text"
            android:textSize="@dimen/size_sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_marginLeft="@dimen/margin_40"
            android:layout_marginRight="@dimen/margin_40"
            android:layout_marginTop="@dimen/margin_20"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/dialog_bt_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_40"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_background_yellow"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="@dimen/size_sp_13"
                android:visibility="visible" />

            <Button
                android:id="@+id/dialog_bt_confirm"
                android:layout_width="0dp"
                android:layout_height="@dimen/margin_40"
                android:layout_marginLeft="@dimen/margin_40"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_background_blue"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="@dimen/size_sp_13" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>