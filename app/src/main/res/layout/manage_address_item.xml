<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/margin_5"
        android:background="@drawable/layout_background"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_cccccc"></View>

        <RelativeLayout
            android:id="@+id/people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/margin_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goods_receipt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_12"
                android:layout_toLeftOf="@+id/goods_receipt_phone"
                android:singleLine="true"
                android:text="收货人：张三"
                android:textColor="@color/black_text"
                android:textSize="@dimen/size_sp_14" />

            <TextView
                android:id="@+id/goods_receipt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/margin_25"
                android:singleLine="true"
                android:text="1812255252"
                android:textColor="@color/black_text"
                android:textSize="@dimen/size_sp_14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/people"
            android:layout_marginBottom="@dimen/margin_12"
            android:layout_marginTop="@dimen/margin_10">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_12"
                android:text="收货地址："
                android:textColor="@color/black_text"
                android:textSize="@dimen/size_sp_micro" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_toRightOf="@+id/text"
                android:text="上海市开机时间哈哈哈大客上海市开机时间哈哈哈大客"
                android:textColor="@color/black_text"
                android:textSize="@dimen/size_sp_micro" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_cccccc"></View>

        <RelativeLayout
            android:id="@+id/relative_default"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height"
            android:visibility="visible">

            <CheckBox
                android:id="@+id/select_default_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_12"
                android:button="@drawable/selector_default_shopping_address"
                android:padding="@dimen/margin_5"
                android:text=" 默认地址"
                android:textColor="@drawable/selector_goods_list_screen_tv_color"
                android:textSize="@dimen/size_sp_12" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_12"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/edit_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/margin_15"
                    android:layout_toLeftOf="@+id/select_address"
                    android:padding="@dimen/margin_5"
                    android:text="编辑"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/size_sp_12" />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/margin_15"
                    android:background="@color/color_cccccc"></View>

                <TextView
                    android:id="@+id/delete_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/margin_15"
                    android:layout_toLeftOf="@+id/select_address"
                    android:padding="@dimen/margin_5"
                    android:text="删除"
                    android:textColor="@color/button_color"
                    android:textSize="@dimen/size_sp_12" />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>
