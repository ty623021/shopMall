<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <tyzl.company.weight.TitleView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"></FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <yicheng.android.ui.materialdesignlibrary.views.LayoutRipple
                android:id="@+id/tab_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/dp_2"
                android:paddingTop="@dimen/dp_4">

                <ImageView
                    android:id="@+id/tab_home_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/selector_home_icon" />

                <TextView
                    android:id="@+id/tab_home_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tab_home_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="@string/tab_home"
                    android:textColor="@drawable/selector_home_tab_tv_color"
                    android:textSize="@dimen/size_sp_micro" />
            </yicheng.android.ui.materialdesignlibrary.views.LayoutRipple>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <yicheng.android.ui.materialdesignlibrary.views.LayoutRipple
                android:id="@+id/tab_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/dp_2"
                android:paddingTop="@dimen/dp_4">

                <ImageView
                    android:id="@+id/tab_type_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/selector_home_type_icon" />

                <TextView
                    android:id="@+id/tab_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tab_type_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="@string/tab_type"
                    android:textColor="@drawable/selector_home_tab_tv_color"
                    android:textSize="@dimen/size_sp_micro" />
            </yicheng.android.ui.materialdesignlibrary.views.LayoutRipple>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <yicheng.android.ui.materialdesignlibrary.views.LayoutRipple
                android:id="@+id/tab_shopping"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/dp_2"
                android:paddingTop="@dimen/dp_4">

                <ImageView
                    android:id="@+id/tab_shopping_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/selector_home_shop_icon" />

                <LinearLayout
                    android:id="@+id/shopping_linear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="-8dp"
                    android:layout_toRightOf="@id/tab_shopping_icon"
                    android:background="@drawable/shape_round_red_radius_10"
                    android:gravity="center"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/shopping_number"
                        android:layout_width="@dimen/dp_15"
                        android:layout_height="@dimen/dp_15"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="9"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_sp_min_micro" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tab_shopping_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tab_shopping_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="@string/tab_shop"
                    android:textColor="@drawable/selector_home_tab_tv_color"
                    android:textSize="@dimen/size_sp_micro" />


            </yicheng.android.ui.materialdesignlibrary.views.LayoutRipple>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <yicheng.android.ui.materialdesignlibrary.views.LayoutRipple
                android:id="@+id/tab_personal_center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/dp_2"
                android:paddingTop="@dimen/dp_4">

                <ImageView
                    android:id="@+id/tab_personal_center_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/selector_home_person_icon" />

                <TextView
                    android:id="@+id/tab_personal_center_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tab_personal_center_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="@string/tab_person"
                    android:textColor="@drawable/selector_home_tab_tv_color"
                    android:textSize="@dimen/size_sp_micro" />
            </yicheng.android.ui.materialdesignlibrary.views.LayoutRipple>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
