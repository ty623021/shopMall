<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical">

    <tyzl.company.weight.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></tyzl.company.weight.TitleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:background="@drawable/layout_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_35"
            android:drawableLeft="@drawable/pay_success"
            android:drawablePadding="@dimen/margin_5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_left_right_12"
            android:text="购买成功"
            android:textColor="@color/black"
            android:textSize="@dimen/size_sp_small" />

        <TextView
            android:id="@+id/pay_amount"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layout_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_left_right_12"
            android:text="￥2502.00"
            android:textColor="@color/black"
            android:textSize="@dimen/size_sp_24"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_line"
            android:layout_marginTop="@dimen/margin_40"
            android:background="@color/global_line_color"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10">

            <TextView
                android:id="@+id/pay_goods_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_left_right_12"
                android:text="商品详情"
                android:textColor="@color/color_bcbcbc"
                android:textSize="@dimen/size_sp_micro" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_left_right_12"
                android:text="优惠券"
                android:textColor="@color/color_bcbcbc"
                android:textSize="@dimen/size_sp_micro" />

            <TextView
                android:id="@+id/pay_coupon_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_left_right_12"
                android:text="￥0.00"
                android:textColor="@color/color_bcbcbc"
                android:textSize="@dimen/size_sp_micro" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_left_right_12"
                android:text="购买数量"
                android:textColor="@color/color_bcbcbc"
                android:textSize="@dimen/size_sp_micro" />

            <TextView
                android:id="@+id/pay_goods_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_left_right_12"
                android:text="￥0.00"
                android:textColor="@color/color_bcbcbc"
                android:textSize="@dimen/size_sp_micro" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/margin_left_right_12"
                android:text="交易金额"
                android:textColor="@color/color_bcbcbc"
                android:textSize="@dimen/size_sp_micro" />

            <TextView
                android:id="@+id/pay_goods_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_left_right_12"
                android:text="￥0.00"
                android:textColor="@color/color_bcbcbc"
                android:textSize="@dimen/size_sp_micro" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_line"
            android:background="@color/global_line_color"></View>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_right_12"
            android:layout_marginRight="@dimen/margin_left_right_12"
            android:layout_marginTop="@dimen/margin_10"
            android:text="这里显示备注的文字"
            android:textColor="@color/color_bcbcbc"
            android:textSize="@dimen/size_sp_micro" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_60"
            android:orientation="horizontal">

            <Button
                android:id="@+id/pay_go_home"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginRight="@dimen/margin_40"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_background_yellow"
                android:text="回到首页"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/pay_go_order"
                android:layout_width="0dp"
                android:layout_height="@dimen/layout_height"
                android:layout_marginRight="@dimen/dp_24"
                android:layout_weight="1"
                android:background="@drawable/shape_btn_background_blue"
                android:text="查看订单"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>