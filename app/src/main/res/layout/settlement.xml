<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/settlement_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_line"
            android:background="@color/gray_line_default"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/layout_all_pay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_18">

                <ImageView
                    android:id="@+id/img_pay_all"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/shopping_normal" />
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_8"
                android:gravity="center_vertical"
                android:text="全选"
                android:textColor="@color/black"
                android:textSize="@dimen/size_sp_small" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_allprice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_toLeftOf="@+id/go_pay"
                android:gravity="center_vertical"
                android:text="合计: 0.00"
                android:textColor="@color/black"
                android:textSize="@dimen/size_sp_small" />

            <Button
                android:id="@+id/go_pay"
                android:layout_width="133dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:background="@drawable/shape_rect_settlement"
                android:text="结算"
                android:textColor="@color/white"
                android:textSize="@dimen/size_sp_medium" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edite_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/layout_all_edite"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_18">

                <ImageView
                    android:id="@+id/img_edite_all"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/shopping_normal" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_8"
                android:gravity="center_vertical"
                android:text="全选"
                android:textColor="@color/black"
                android:textSize="@dimen/size_sp_small" />
            </LinearLayout>
            <Button
                android:id="@+id/btn_share"
                android:layout_width="133dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_4"
                android:textColor="@color/white"
                android:layout_toLeftOf="@+id/btn_delete"
                android:background="@drawable/shape_rect_settlement"
                android:text="分享"
            />
            <Button
                android:id="@+id/btn_delete"
                android:layout_width="133dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:background="@drawable/select_shap_red"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="@dimen/size_sp_medium" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
