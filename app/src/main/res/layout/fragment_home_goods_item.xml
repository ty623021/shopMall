<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/gray_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/goods_img"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/tu" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5">

            <TextView
                android:id="@+id/shopping_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:maxLines="1"
                android:text="灰黑色色休闲运动男装"
                android:textColor="@color/color_393939"
                android:textSize="@dimen/size_sp_11" />

            <TextView
                android:id="@+id/goods_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shopping_title"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_10"
                android:text="库存：1000件 "
                android:textColor="@color/color_999999"
                android:textSize="@dimen/size_sp_11" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/goods_amount"
                android:layout_marginTop="@dimen/margin_10">

                <TextView
                    android:id="@+id/goods_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="￥166"
                    android:textColor="@color/color_fd7625"
                    android:textSize="@dimen/size_sp_14" />

                <ImageView
                    android:id="@+id/shop_car_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_5"
                    android:src="@drawable/shop_car" />

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>


