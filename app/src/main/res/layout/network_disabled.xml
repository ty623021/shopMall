<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/network_disabled"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:gravity="center_vertical"
    android:visibility="gone">

    <ImageView
        android:id="@+id/network_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@drawable/wuwangl"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/nodata_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/nodata_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:background="@drawable/wushuju"
            android:visibility="visible" />

        <TextView
            android:id="@+id/nodata_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20"
            android:text="暂无数据，赶快去添加吧！"
            android:textColor="@color/black_text"
            android:textSize="@dimen/size_sp_12"
            android:visibility="gone" />
    </LinearLayout>


</RelativeLayout>